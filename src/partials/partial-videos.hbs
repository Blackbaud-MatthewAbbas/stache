<section id="video" class="videos-container row">
  <div class="video-list-wrapper col-md-3">
      <div class="video-arrow vid-arrow-up toggle-large"><i class="fa fa-chevron-up fa-lg"></i></div>
      <div class="video-arrow vid-arrow-left toggle-small"><i class="fa fa-chevron-left fa-lg"></i></div>
      <div class="video-list">
      {{# each videos }}
        <a class="video-item" href="{{ video_link }}" data-description="{{ video_description }}">
            <div class="video-thumb">
              <img src="{{ video_img }}"/>
            </div>
            <div class="video-title">
              {{ video_title }}
            </div>
        </a>
      {{/ each}}
    </div>
    <div class="video-arrow vid-arrow-down toggle-large"><i class="fa fa-chevron-down fa-lg"></i></div>
    <div class="video-arrow vid-arrow-right toggle-small"><i class="fa fa-chevron-right fa-lg"></i></div>
  </div>
  <div class="video-display embed-responsive embed-responsive-16by9 col-md-8 col-md-offset-1">
    {{# withFirst videos }}
        <iframe
          id="video-iframe"
          src="{{ video_link }}?rel=0&showinfo=0&autohide=1"
          frameborder="0">
        </iframe>
      {{/ withFirst }}
  </div>
  <div class="video-description-container col-sm-12">
    <h2 id="video-description-header"></h2>
    <div id="video-description"></div>
  </div>
</section>
