---
layout: layout-container
---

{{> body }}

<div class="showcase">
  {{# eachChildLink mod=3 }}

    {{# if firstOrMod0 }}
      <div class="row {{# unless first }}resources-more{{/ unless }}">
    {{/ if }}

    <div class="col-sm-4">
      {{# if thumbnail }}
        <div class="has-hover">
          <img src="{{ thumbnail }}" alt="" />
          <div class="show-on-hover">
            <div class="is-table">
              <div class="is-table-cell">
                <a href="{{ uri }}" class="btn btn-primary">View Tutorial</a>
              </div>
            </div>
          </div>
        </div>
      {{/ if }}
      <h3><a href="{{ uri }}">{{ name }}</a></h3>
      {{# if description }}
        <p>{{ description }}</p>
      {{/ if }}
    </div>

    {{# if lastOrMod1 }}
      </div>
    {{/ if }}

  {{/ eachChildLink }}
</div>