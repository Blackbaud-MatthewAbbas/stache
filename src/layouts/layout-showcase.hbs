---
layout: layout-container
---

{{# if stache.config.markdown }}
  {{# markdown }}{{ body }}{{/ markdown }}
{{ else }}
  {{ body }}
{{/ if }}

<div class="showcase">
  {{# eachChildLink mod=3 }}
      {{# if firstOrMod0 }}<div class="row showcase-row {{# unless first }}showcase-more{{/ unless }}">{{/ if }}
            <div class="col-sm-4">{{# if thumbnail }}
              <div class="has-hover">
                <img src="{{ thumbnail }}" alt="" />
                <div class="show-on-hover">
                  <div class="is-table">
                    <div class="is-table-cell">
                      <a href="{{ uri }}" class="btn btn-primary">View</a>
                    </div>
                  </div>
                </div>
              </div>{{/ if }}
            {{# if icon }}<i class="showcase-icon {{ icon }}"></i><div class="showcase-desc">{{/ if }}<h3><a href="{{ uri }}">{{ name }}</a></h3>
            {{# if description }}<p>{{ description }}</p>{{/ if }}
            {{# if icon }}</div>{{/ if }}
            </div>
      {{# if lastOrMod1 }}</div>{{/ if }}
  {{/ eachChildLink }}
</div>
