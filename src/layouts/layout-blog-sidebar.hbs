---
layout: layout-container
showHeadings: true
---

<div class="row">
  <div class="col-sm-3">
    <div class="sidebar">

      <h3>Recent Posts</h3>

      {{# withNavLinks limit=child_limit }}
        {{# isActiveNav dest=../page.dest }}
          <ul class="nav nav-stacked nav-sidebar">

            {{# if showTitle }}
                <li class="title {{# if draft }}draft{{/ if }}">
                  <a href="{{ uri }}">
                    {{ name }}
                  </a>
                </li>
            {{/ if}}

            {{ include 'partial-sidebar' this dest=../../page.dest showHeadings=../../../showHeadings page=../../../pagination.index.page limit=../../../limit  sortKey="uri" sortDesc=true }}

            <li class="visible-on-affix">
              <a href="#top" class="smooth-scroll">
                <i class="fa fa-caret-square-o-up"></i>
              </a>
            </li>

          </ul>
        {{/ isActiveNav }}
      {{/ withNavLinks }}

    </div>
  </div>
  <div class="col-sm-9">
    {{# inherit stache.config.markdown markdown }}
      {{# markdown }}{{ body }}{{/ markdown }}
    {{ else }}
      {{# withNewline }}{{ body }}{{/ withNewline }}
    {{/ inherit }}
  </div>
</div>
